#!/bin/sh

set -e

echo "-----> Found a nginx/config/templates/nginx.conf.erb"

# if file is empty, abort the build
if [ ! -s $1/nginx/config/templates/nginx.conf.erb ]; then
  echo "nginx/config/templates/nginx.conf.erb was empty"
  exit 1
fi

ls -lrt $1
ls -lrt /app/
ls -lrt /app/bin/
ls -lrt /app/bin/config/
ls -lrt /app/bin/config/templates/



# replace hello with goodbye in a new file
cp $1/nginx/config/templates/nginx.conf.erb $/bin/config/templates/nginx.conf.erb

exit 1
